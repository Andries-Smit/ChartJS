<?xml version="1.0" encoding="utf-8" ?>
<widget id="ChartJS.widgets.Bar.widget.Bar" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
	<name>ChartJS - Bar Chart</name>
	<description></description>

	<icon></icon>

	<properties>
		<property key="chartType" type="enumeration" defaultValue="Line">
			<caption>Chart Type</caption>
			<category>Appearance</category>
			<description>This field determines the display direction.</description> 
			<enumerationValues>
				<enumerationValue key="Line">Line</enumerationValue>
				<enumerationValue key="Bar">Bar</enumerationValue>
				<enumerationValue key="Radar">Radar</enumerationValue>
			</enumerationValues>
		</property>
		<property key="width" type="integer" required="true" defaultValue="850">
			<caption>Width</caption>
			<category>Appearance</category>
			<description></description>
		</property>
		<property key="height" type="integer" required="true" defaultValue="450">
			<caption>Height</caption>
			<category>Appearance</category>
			<description></description>
		</property>
		<property key="sourceentity" type="entity" required="true" allowNonPersistableEntities="true">
			<caption>Source entity</caption>
			<category>Data source</category>
			<description></description>
		</property>
		<property key="datasetentity" type="entity" required="true" allowNonPersistableEntities="true" entityProperty="sourceentity" isPath="yes" pathType="referenceSet">
			<caption>Data set entity</caption>
			<category>Data source</category>
			<description></description>
		</property>
		<property key="datapointentity" type="entity" required="true" allowNonPersistableEntities="true" entityProperty="datasetentity" isPath="yes" pathType="referenceSet">
			<caption>Data point entity</caption>
			<category>Data source</category>
			<description></description>
		</property>
		<property key="datasourcemf" type="microflow" required="false">
			<caption>Microflow</caption>
			<category>Data source</category>
			<description></description>
			<returnType type="Object" entityProperty="sourceentity"></returnType>
		</property>
		<property key="datasetlabel" type="attribute" entityProperty="datasetentity" allowNonPersistableEntities="true" required="true">
			<caption>Dataset label</caption>
			<category>Data source</category>
			<description></description>
			<attributeTypes>
				<attributeType name="Enum"/>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="seriesxlabel" type="attribute" entityProperty="datapointentity" allowNonPersistableEntities="true" required="true">
			<caption>Category x</caption>
			<category>Data source</category>
			<description>The attribute which specifies the categorie or X value of a point in the chart. Note that all series should use a Category attribute which returns comparable values from the same domain, otherwise the X-axis might contain undesired values. References are allowed here.</description>
			<attributeTypes>
				<attributeType name="AutoNumber"/>
				<attributeType name="Boolean"/>
				<attributeType name="Currency"/>
				<attributeType name="DateTime"/>
				<attributeType name="Enum"/>
				<attributeType name="Float"/>
				<attributeType name="Integer"/>
				<attributeType name="Long"/>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="sortingxvalue" type="attribute" entityProperty="datapointentity" allowNonPersistableEntities="true" required="true">
			<caption>Sorting x</caption>
			<category>Data source</category>
			<description></description>
			<attributeTypes>
				<attributeType name="AutoNumber"/>
				<attributeType name="Currency"/>
				<attributeType name="DateTime"/>
				<attributeType name="Float"/>
				<attributeType name="Integer"/>
				<attributeType name="Long"/>
			</attributeTypes>
		</property>
		<property key="seriesylabel" type="attribute" entityProperty="datapointentity" allowNonPersistableEntities="true" required="true">
			<caption>Category y</caption>
			<category>Data source</category>
			<description>The attribute which specifies the categorie or X value of a point in the chart. Note that all series should use a Category attribute which returns comparable values from the same domain, otherwise the X-axis might contain undesired values. References are allowed here.</description>
			<attributeTypes>
				<attributeType name="AutoNumber"/>
				<attributeType name="Boolean"/>
				<attributeType name="Currency"/>
				<attributeType name="DateTime"/>
				<attributeType name="Enum"/>
				<attributeType name="Float"/>
				<attributeType name="Integer"/>
				<attributeType name="Long"/>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="seriescolor" type="attribute" entityProperty="datasetentity" allowNonPersistableEntities="true" required="true">
			<caption>Color (in Hex)</caption>
			<category>Data source</category>
			<description>Set the colour of the bar or line.</description>
			<attributeTypes>
				<attributeType name="AutoNumber"/>
				<attributeType name="Boolean"/>
				<attributeType name="Currency"/>
				<attributeType name="DateTime"/>
				<attributeType name="Enum"/>
				<attributeType name="Float"/>
				<attributeType name="Integer"/>
				<attributeType name="Long"/>
				<attributeType name="String"/>
			</attributeTypes>
		</property>

		<property key="yaxisMinValue" type="attribute" entityProperty="sourceentity">
			<caption>Minimum value Y Axis</caption>
			<category>Y Axis</category>
			<description>The minimum value of the Y Axis.</description>
			<attributeTypes>
				<attributeType name="Float"/>
				<attributeType name="Integer"/>
			</attributeTypes>
		</property>
		<property key="yaxisMaxValue" type="attribute" entityProperty="sourceentity">
			<caption>Maximum value Y Axis</caption>
			<category>Y Axis</category>
			<description>The minimum value of the Y Axis.</description>
			<attributeTypes>
				<attributeType name="Float"/>
				<attributeType name="Integer"/>
			</attributeTypes>
		</property>
	</properties>
</widget>

